<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Providers</h1> 
<br>
<%= link_to 'New Provider', new_provider_path , :style=>"text-decoration: none; color: white; margin-bottom: 20px", :class=>"btn btn-primary"%>


<table class="table table-dark table-striped table-hover">
  <thead>
    <tr style="text-align: center;">
      <th>Name</th>
      <th>Number</th>
      <th>Email</th>      
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.name %></td>
        <td><%= provider.number %></td>
        <td><%= provider.email%></td>
        <td><%= link_to 'Show', provider ,  :style=>"text-decoration: none; color: white;" , :class=>"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' }, :style=>"text-decoration: none; color: white;", :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
