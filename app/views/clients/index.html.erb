<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Clients</h1> 
<br>
<%= link_to 'New Client', new_client_path , :style=>"text-decoration: none; color: white; margin-bottom: 20px", :class=>"btn btn-primary"%>


<table class="table table-dark table-striped table-hover">
  <thead>
    <tr style="text-align: center;">
      <th>Name</th>
      <th>Number</th>
      <th>Email</th>      
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.number %></td>
        <td><%= client.email%></td>
        <td><%= link_to 'Show', client ,  :style=>"text-decoration: none; color: white;" , :class=>"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_client_path(client) , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' }, :style=>"text-decoration: none; color: white;", :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
