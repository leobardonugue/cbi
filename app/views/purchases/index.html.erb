
<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Purchases</h1>
<br>
<%= link_to 'New Purchase', new_purchase_path , :style=>"text-decoration: none; color: white; margin-bottom: 20px", :class=>"btn btn-primary"%>

<table class="table table-dark table-striped table-hover">
  <thead>
    <tr style="text-align: center;">
      <th>Product</th>
      <th>Shop</th>
      <th>Stock</th>
      <th>Initial Existence</th>
      <th>Purchase Price</th>
      <th>Sale Price</th>
      <th>Date</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.product.name %></td>        
        <td><%= purchase.shop.name %></td>
        <td><%= purchase.stock %></td>
        <td><%= purchase.initial_existence %></td>
        <td><%= purchase.purchase_price %></td>
        <td><%= purchase.sale_price %></td>
        <td><%= purchase.created_at %></td>
        <td><%= link_to 'Show', purchase , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } , :style=>"text-decoration: none; color: white;", :class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

</div>