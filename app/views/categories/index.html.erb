<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>
<br>
<%= link_to 'New Category', new_category_path , :style=>"text-decoration: none; color: white; margin-bottom: 20px", :class=>"btn btn-primary"%>

<table class="table table-dark table-striped table-hover">
  <thead>
    <tr style="text-align: center;">
      <th>Category</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category %></td>
        <td><%= link_to 'Show', category , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_category_path(category) , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } , :style=>"text-decoration: none; color: white;", :class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>