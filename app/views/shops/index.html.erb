
<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Shop</h1>
<br>
<%= link_to 'New Shop', new_shop_path , :style=>"text-decoration: none; color: white; margin-bottom: 20px", :class=>"btn btn-primary"%>

<table class="table table-dark table-striped table-hover">
  <thead>
    <tr style="text-align: center;">
      <th>Name</th>
      <th>Addres</th>
      <th>Phone</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>        
        <td><%= shop.addres %></td>
        <td><%= shop.phone %></td>
        <td><%= link_to 'Show', shop , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) , :style=>"text-decoration: none; color: white;" , :class=>"btn btn-warning"%></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } , :style=>"text-decoration: none; color: white;", :class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

</div>